case $1 in
    -h)
        echo "NAME"
        echo "    ${0##*/} - List manually installed packages"
        echo "SYNOPSIS"
        echo "    ${0##*/} [-options]"
        echo "OPTIONS"
        echo "    -v    list manually installed packages with a short description"
        echo "    -l    list manually installed library packages"
        echo "    -v    list manually installed library packages with a short description"
        echo "HINTS"
        echo "    Manage manually installed packages with aptitude dialog (type \"l\"):"
        echo "        \"!~v~i!~M!~prequired!~pimportant!~pstandard\""
            ;;
    -lv|-vl)
        aptitude search '!~v~i!~M!~prequired!~pimportant!~pstandard'|\
            sed -e 's/^...//' | grep ^lib
            ;;
    -l)
        aptitude search '!~v~i!~M!~prequired!~pimportant!~pstandard'|\
            sed -e 's/^...//' -e 's/  *-.*$//' | grep ^lib
            ;;
    -v)
        aptitude search '!~v~i!~M!~prequired!~pimportant!~pstandard'|\
            sed -e 's/^...//'
            ;;
    *)
        aptitude search '!~v~i!~M!~prequired!~pimportant!~pstandard'|\
            sed -e 's/^...//' -e 's/  *-.*$//'
            ;;
esac
# vim:se tw=78 ai sts=4 et:
